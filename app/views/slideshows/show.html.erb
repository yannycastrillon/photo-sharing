<p id="notice"><%= notice %></p>

<p><i><%= @slideshow.name %></i></p>
<div id="slides">
  <%= render partial: "show_slides" %>
</div>

<script type="text/javascript">
  $(document).ready(() => {
    setInterval(()=>{
      $('#slides').load("show_slide" )
    }, 2000)
  })
</script>

